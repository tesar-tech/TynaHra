@page "/"

<div class="flex place-content-center mt-8">
	<input class="px-2 text-red-800 bg-fuchsia-100" @bind="currentText" @oninput="ui =>  currentText = (string)ui.Value" @onkeypress="OnKeyPress" />
	<button class="mx-1 bg-sky-500 rounded font-bold text-white text-center px-2 py-1 transition duration-300 ease-in-out hover:bg-blue-600" @onclick="CodeSubmited" type="button">
		Jop!
	</button>
</div>

<div class="pt-5">
	@if (!isCurrentCodeFine)
	{
		<div class="-mt-5 text-center text-fuchsia-800">
			@((MarkupString)CodesDatabase.EmptyOrWrongCode(code))
		</div>
	}
	<div class="max-w-md mx-auto text-white text-justify px-3 py-2  mx-2 bg-gradient-to-r from-fuchsia-700 to-red-600 shadow-lg transform  -skew-y-0  rounded-lg">
		@((MarkupString)currentWorkingHtml)
	</div>
</div>

@code {

	string code = "";
	string currentText = "";
	bool isCurrentCodeFine;  
	string currentWorkingHtml = "";


	void OnKeyPress(KeyboardEventArgs args)
	{
		if (args.Key == "Enter")
			CodeSubmited(); 
	}

	void CodeSubmited()
	{
		code = currentText;
		var res = CodesDatabase.GetHtmlForCode(code);
		if (res.Item1)
		{
			currentWorkingHtml = res.Item2;
			currentText = "";
		}
		isCurrentCodeFine = res.Item1;
	}
	protected override void OnInitialized()
	{
		currentWorkingHtml = CodesDatabase.GetHtmlForCode("help").Item2;
		base.OnInitialized();
	}
}

